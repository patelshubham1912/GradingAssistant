<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.shubham.gradingassistant.SecondFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="0dp"
            >
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="left|top"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"

                android:background="@drawable/border_layout"
                android:id="@+id/relativeLayout">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:background="#b3a3a3"
                    android:textColor="#000000"
                    android:text="Course1"
                    android:id="@+id/fragment_second_course1"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="right|top"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@+id/relativeLayout"
                android:layout_toEndOf="@+id/relativeLayout"
                android:background="@drawable/border_layout"
                android:id="@+id/relativeLayout3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:background="#b3a3a3"
                    android:textColor="#000000"
                    android:text="Course2"
                    android:id="@+id/fragment_second_course2"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="left|top"
                android:layout_marginTop="300dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"

                android:background="@drawable/border_layout"
                android:id="@+id/relativeLayout2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:background="#b3a3a3"
                    android:textColor="#000000"
                    android:text="Course3"
                    android:id="@+id/fragment_second_course3"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="right|top"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_layout"
                android:layout_alignTop="@+id/relativeLayout2"
                android:layout_toEndOf="@+id/relativeLayout2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#b3a3a3"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="Notifications"
                    android:id="@+id/fragment_second_notifications"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
