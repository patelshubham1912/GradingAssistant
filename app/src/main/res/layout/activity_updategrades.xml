<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Project"
        android:id="@+id/updateGrades_Project"
        android:layout_below="@+id/updateGrades_Assignment"
        android:layout_alignStart="@+id/updateGrades_Assignment"
        android:layout_marginTop="42dp"
        android:layout_alignEnd="@+id/updateGrades_Assignment" />
        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Mid-Term"
        android:id="@+id/updateGrades_MidTerm"
        android:layout_below="@+id/updateGrades_Project"
        android:layout_alignStart="@+id/updateGrades_Project"
        android:layout_marginTop="46dp"
        android:layout_alignEnd="@+id/updateGrades_Assignment" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Final Exam"
        android:id="@+id/updateGrades_Final"
        android:layout_below="@+id/updateGrades_MidTerm"
        android:layout_alignStart="@+id/updateGrades_MidTerm"
        android:layout_marginTop="50dp" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Quiz"
        android:id="@+id/updateGrades_Quiz"
        android:layout_below="@+id/updateGrades_Final"
        android:layout_alignStart="@+id/updateGrades_Final"
        android:layout_marginTop="50dp"
            android:layout_alignEnd="@+id/UpdateGrades_update" />


        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateGrades_StudentId"
        android:hint="Student ID"
        android:layout_alignBottom="@+id/UpdateGrades_search"
        android:layout_toStartOf="@+id/editText16" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateGrades_CourseId"
        android:hint="Course ID"
        android:layout_alignBottom="@+id/UpdateGrades_search"
        android:layout_alignEnd="@+id/UpdateGrades_update" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Assignment"
        android:id="@+id/updateGrades_Assignment"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/updateGrades_StudentId"
        android:layout_alignStart="@+id/UpdateGrades_update" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:id="@+id/UpdateGrades_search"
        android:layout_marginEnd="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/UpdateGrades_update"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/updateGrades_Quiz"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>