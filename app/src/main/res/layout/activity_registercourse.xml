<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="78dp"
        android:id="@+id/spinner"
        android:entries="@array/courseList1"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp"
        android:id="@+id/spinner3"
        android:entries="@array/courseList2"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp"
        android:id="@+id/spinner4"
        android:entries="@array/courseList3"/>

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/button3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Core Courses:"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/editText9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Elective Courses:"
        android:ems="10"
        android:layout_below="@+id/spinner"
        android:layout_alignEnd="@+id/editText9"
        android:layout_marginTop="19dp"
        android:id="@+id/editText11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Major Courses:"
        android:ems="10"
        android:layout_below="@+id/spinner3"
        android:layout_alignEnd="@+id/editText11"
        android:layout_marginTop="13dp"
        android:id="@+id/editText16" />
</RelativeLayout>