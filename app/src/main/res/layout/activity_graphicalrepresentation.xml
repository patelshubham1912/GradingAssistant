<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

   <TextView
android:id="@+id/linetext"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Line Graph"
android:textSize="16dp"
android:layout_marginBottom="20dp"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_below="@+id/linetext"
>
<TextView
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:background="#0000ec"
    android:id="@+id/graphicalrepresentation_blue"
    />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/graphicalrepresentation_blue"
       android:layout_marginLeft="30dp"
       android:text="Mean"/>

   <TextView
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:background="#07ab12"
    android:id="@+id/graphicalrepresentation_green"
    android:layout_below="@+id/graphicalrepresentation_blue"
    android:layout_marginTop="15px"
    />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/graphicalrepresentation_green"
       android:layout_below="@+id/graphicalrepresentation_blue"
       android:layout_marginTop="15px"
       android:layout_marginLeft="30dp"
       android:text="Median"/>

   <TextView
       android:layout_width="15dp"
       android:layout_height="15dp"
       android:background="#ff1500"
       android:id="@+id/graphicalrepresentation_red"
       android:layout_below="@+id/graphicalrepresentation_green"
       android:layout_marginTop="15px"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/graphicalrepresentation_red"
       android:layout_below="@+id/graphicalrepresentation_green"
       android:layout_marginTop="15px"
       android:layout_marginLeft="30dp"
       android:text="Standard Deviation"/>

   <TextView
       android:layout_width="15dp"
       android:layout_height="15dp"
       android:background="#ffe100"
       android:id="@+id/graphicalrepresentation_yellow"
       android:layout_below="@+id/graphicalrepresentation_red"
       android:layout_marginTop="15px"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/graphicalrepresentation_yellow"
       android:layout_below="@+id/graphicalrepresentation_red"
       android:layout_marginTop="15px"
       android:layout_marginLeft="30dp"
       android:text="Highest Score"/>

   <TextView
       android:layout_width="15dp"
       android:layout_height="15dp"
       android:background="#00ffee"
       android:id="@+id/graphicalrepresentation_cyan"
       android:layout_below="@+id/graphicalrepresentation_yellow"
       android:layout_marginTop="15px"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/graphicalrepresentation_cyan"
       android:layout_below="@+id/graphicalrepresentation_yellow"
       android:layout_marginTop="15px"
       android:layout_marginLeft="30dp"
       android:text="Lowest Score"/>
</RelativeLayout>
<com.jjoe64.graphview.GraphView
android:layout_width="match_parent"
android:layout_height="240dip"
android:title="Graph Title"
android:id="@+id/graphicalrepresentation_graph"
android:layout_below="@+id/linetext"
    android:layout_marginTop="120dp"
    />


</RelativeLayout>